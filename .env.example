# 告警管理平台环境变量配置模板
# 复制此文件为 .env 并填入实际值

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=debug

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=pulse
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5

# Elasticsearch配置
ELASTICSEARCH_ADDRESSES=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=pulse

# RabbitMQ配置
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=pulse.alerts
RABBITMQ_QUEUE_PREFIX=pulse

# JWT配置
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=168h
JWT_ISSUER=pulse-alert-platform

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=logs/app.log

# 邮件通知配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@pulse.com
SMTP_TLS=true

# Slack通知配置
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts
SLACK_USERNAME=Pulse Alert Bot

# 钉钉通知配置
DINGTALK_WEBHOOK_URL=
DINGTALK_SECRET=

# 企业微信通知配置
WECHAT_CORP_ID=
WECHAT_CORP_SECRET=
WECHAT_AGENT_ID=

# 外部集成配置
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=
ZABBIX_URL=http://localhost/zabbix
ZABBIX_USERNAME=
ZABBIX_PASSWORD=

# 限流配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# 监控配置
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
PPROF_ENABLED=false

# Worker配置
WORKER_NOTIFICATION_ENABLED=true
WORKER_NOTIFICATION_COUNT=3
WORKER_ALERT_PROCESSOR_ENABLED=true
WORKER_ALERT_PROCESSOR_COUNT=5
WORKER_COLLECTOR_ENABLED=true
WORKER_COLLECTOR_COUNT=2
WORKER_COLLECTOR_INTERVAL=30s